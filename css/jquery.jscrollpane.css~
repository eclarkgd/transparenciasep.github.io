/*
 * CSS Styles that are needed by jScrollPane for it to operate correctly.
 *
 * Include this stylesheet in your site or copy and paste the styles below into your stylesheet - jScrollPane
 * may not operate correctly without them.
 */

.jspContainer
{
	overflow: hidden;
	position: relative;
        background-color: #808080;
}

.jspPane
{
	position: absolute;
	padding-bottom:40px;
background-color: #808080;
}

.jspVerticalBar
{
	position: absolute;
	top: 0;
	right: 0;
	width: 7px;
background-color: #808080;
	height: 100%;
}

.jspHorizontalBar
{
	position: absolute;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 16px;
background-color: #808080;
}

.jspVerticalBar *,
.jspHorizontalBar *
{
	margin: 0;
	padding: 0;
background-color: #808080;
}

.jspCap
{
	display: none;
background-color: #808080;
}

.jspHorizontalBar .jspCap
{
	float: left;
background-color: #808080;
}

.jspTrack
{
	background: #E6E6E6;
	position: relative;
	border-radius:3px;
background-color: #808080;
}

.jspDrag
{
	background: #BBBBBB;
	position: relative;
	top: 0;
	left: 0;
	cursor: pointer;
	border-radius:3px;
background-color: #808080;
}

.jspHorizontalBar .jspTrack,
.jspHorizontalBar .jspDrag
{
	float: left;
	height: 100%;
background-color: #808080;
}

.jspArrow
{
	background: #50506d;
	text-indent: -20000px;
	display: block;
	cursor: pointer;
background-color: #808080;
}

.jspArrow.jspDisabled
{
	cursor: default;
	background: #80808d;
background-color: #808080;
}

.jspVerticalBar .jspArrow
{
	height: 16px;
}

.jspHorizontalBar .jspArrow
{
	width: 16px;
	float: left;
	height: 100%;
}

.jspVerticalBar .jspArrow:focus
{
	outline: none;
}

.jspCorner
{
	background: #eeeef4;
	float: left;
	height: 100%;
}

/* Yuk! CSS Hack for IE6 3 pixel bug :( */
* html .jspCorner
{
